{
    "name": "leather",
    "version": "1.1.1",
    "description": "A pure JS library for extracting image/video dimensions",
    "author": "Sidney Liebrand",
    "license": "MIT",
    "repository": "github:SidOfc/leather",
    "keywords": [
        "image",
        "video",
        "dimensions",
        "mime",
        "width",
        "height",
        "jpg",
        "png",
        "gif",
        "bmp",
        "ico",
        "cur",
        "dds",
        "psd",
        "svg",
        "avi",
        "ogv",
        "mkv",
        "mp4",
        "webm"
    ],
    "files": [
        "dist"
    ],
    "exports": {
        ".": {
            "import": "./dist/index.mjs",
            "require": "./dist/index.cjs"
        },
        "./*": {
            "import": "./dist/*.mjs",
            "require": "./dist/*.cjs"
        }
    },
    "scripts": {
        "test": "ava --verbose",
        "build": "rollup -c",
        "watch": "rollup -cw",
        "prepare": "npm run build"
    },
    "ava": {
        "require": [
            "esm"
        ]
    },
    "prettier": {
        "tabWidth": 4,
        "singleQuote": true,
        "printWidth": 80,
        "bracketSpacing": false
    },
    "devDependencies": {
        "ava": "^3.15.0",
        "esm": "^3.2.25",
        "prettier": "^2.4.1",
        "rollup": "^2.58.0"
    }
}
